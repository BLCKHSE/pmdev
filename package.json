{
  "name": "pmdev",
  "displayName": "pmdev",
  "description": "As a developer, why are you even leaving the editor?! Disgusting! Create, view, update and delete tasks from your team's project boards right from your editor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "icons":{
      "pmdev-logo": {
        "description": "PMDEV Icon",
        "default": {
          "fontPath": "resources/icons/logo/fonts/icomoon.woff",
          "fontCharacter": "\\e900"
        }
      }
    },
    "commands": [
      {
        "command": "pmdev.helloWorld",
        "title": "Hello World",
        "category": "PMDev"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pmdev",
          "title": "PMDEV",
          "icon": "$(pmdev-logo)"
        }
      ]
    },
    "views": {
      "pmdev": [
        {
          "id": "my-project-boards",
          "name": "MY PROJECT BOARDS"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "my-project-boards",
        "contents": "Add your project board(s) and get started managing your tasks from within vscode.\n[ADD PROJECT BOARD](command:pmdev.helloWorld)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
